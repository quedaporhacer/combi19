{% extends 'base.html.twig' %}

{% block title %}Chofer index{% endblock %}

{% block body %}
    <h1>Chofer index</h1>

    {% for message in app.flashes('failed') %}

            <div class="alert alert-danger">
                {{ message }}
            </div>
            
    {% endfor %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Contacto</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chofer in chofers %}
            <tr>
                <td>{{ chofer.id }}</td>
                <td>{{ chofer.user.email }}</td>
                <td>{{ chofer.user.nombre }}</td>
                <td>{{ chofer.user.apellido }}</td>
                <td>{{ chofer.contacto }}</td>
                <td>
                    <a href="{{ path('chofer_show', {'id': chofer.id}) }}">show</a>
                   {{ include('chofer/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no hay choferes disponibles</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('chofer_new') }}">Agregar chofer</a>
{% endblock %}
