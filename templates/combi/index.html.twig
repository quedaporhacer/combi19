{% extends 'base.html.twig' %}

{% block title %}Combis{% endblock %}

{% block body %}

{{parent()}}

    <div class="container">
    <br><br><br>
     <div class="shadow-lg p-3 mb-5 bg-body rounded">
    <h1>Combis</h1>

    {% for message in app.flashes('failed') %}

            <div class="alert alert-danger">
                {{ message }}
            </div>
            
    {% endfor %}
   
    <table class="table table-hover" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Patente</th>
                <th>Modelo</th>
                <th>Capacidad</th>
                <th>Calidad</th>
                 <th>Chofer</th>
                <th>Acciones</th>
                
            </tr>
        </thead>
        <tbody>
        {% for combi in combis %}
            <tr>
                <td>{{ combi.id }}</td>
                <td>{{ combi.patente }}</td>
                <td>{{ combi.modelo }}</td>
                <td>{{ combi.capacidad }}</td>
                <td>{{ combi.calidad }}</td>
                <td>{{ combi.chofer }}</td>
                <td>
                    {{ include('combi/_delete_form.html.twig') }}
                    <a class="btn btn-secondary" href="{{ path('combi_edit', {'id': combi.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No hay combis disponibles</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('combi_new') }}">Crear nueva</a>
    </div>
    </div>
{% endblock %}
