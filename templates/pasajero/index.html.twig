{% extends 'base.html.twig' %}

{% block title %}Pasajeros {% endblock %}

{% block body %}
    <h1>Pasajeros </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Nombre</th>
                 <th>Apellido</th>
                 <th>Dni</th>
                <th>Membresia</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for pasajero in pasajeros %}
            <tr>
                <td>{{ pasajero.id }}</td>
                <td>{{ pasajero.user.email }}</td>
                <td>{{ pasajero.user.nombre }}</td>
                <td>{{ pasajero.user.apellido }}</td>
                <td>{{ pasajero.dni }}</td>
                <td>{{ pasajero.membresia ? 'Gold' : 'Basica' }}</td>
                <td>
                    {{ include('pasajero/_delete_form.html.twig') }}
                    <a href="{{ path('pasajero_edit', {'id': pasajero.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no se encontraron pasajeros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pasajero_new') }}">Crear</a>
{% endblock %}
