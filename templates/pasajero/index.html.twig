{% extends 'base.html.twig' %}

{% block title %}Pasajero index{% endblock %}

{% block body %}
    <h1>Pasajero index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                 <th>Apellido</th>
                 <th>Dni</th>
                <th>Membresia</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pasajero in pasajeros %}
            <tr>
                <td>{{ pasajero.id }}</td>
                <td>{{ pasajero.user.nombre }}</td>
                <td>{{ pasajero.user.apellido }}</td>
                <td>{{ pasajero.dni }}</td>
                <td>{{ pasajero.membresia ? 'Gold' : 'Basica' }}</td>
                <td>
                    <a href="{{ path('pasajero_show', {'id': pasajero.id}) }}">show</a>
                    <a href="{{ path('pasajero_edit', {'id': pasajero.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pasajero_new') }}">Create new</a>
{% endblock %}
