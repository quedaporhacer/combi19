{% extends 'base.html.twig' %}

{% block title %}Pasajeros {% endblock %}

{% block body %}
    <div class="container">
    <h1>Pasajeros </h1>

     {% for message in app.flashes('failed') %}

            <div class="alert alert-danger">
                {{ message }}
            </div>
            
    {% endfor %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Nombre</th>
                 <th>Apellido</th>
                 <th>Dni</th>
                <th>Membresia</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for pasajero in pasajeros %}
            <tr>
                <td>{{ pasajero.id }}</td>
                <td>{{ pasajero.user.email }}</td>
                <td>{{ pasajero.user.nombre }}</td>
                <td>{{ pasajero.user.apellido }}</td>
                <td>{{ pasajero.dni }}</td>
                <td>{{ pasajero.membresia ? 'Gold' : 'Basica' }}</td>
                <td>
                    {{ include('pasajero/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No se encontraron pasajeros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pasajero_new') }}">Crear nuevo</a>
    </div>
{% endblock %}
