{% extends 'base.html.twig' %}

{% block title %}Registrarse{% endblock %}

{% block body %}
    <div class= "container" >
        <br>
        <br>
        <br>
        <div class="shadow-lg p-3 mb-5 bg-body rounded">
            <h1>Registrarse</h1>
            {{ include('pasajero/_form.html.twig') }}
            Si ya tienes cuenta, inicia<a href="{{path('app_login')}}" class=""> aqu√≠ </a>
        </div>
    </div>


      <div class="container">
    <div class="shadow-lg p-3 mb-5 bg-body rounded">

        <h1>Reembolso</h1>

        <table class="table">
            <thead>
                <tr>
                   {# <th>Id</th>#}
                    <th>viaje</th>
                    <th>pasajero</th>
                    <th>fecha</th>
                    <th>numero</th>
                    <th>vencimiento</th>
                    <th>codigo</th>
                    <th>Monto a Cobrar</th>
                    <th>Accion</th>

                </tr>
            </thead>
            <tbody>
            {% for ticket in tickets %}
                <tr>
                    {#<td>{{ ticket.id }}</td>#}
                    <td>{{ ticket.viaje }}</td>
                    <td>{{ ticket.pasajero.user }}</td>
                    <td>{{ ticket.viaje.salida ? ticket.viaje.salida|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ ticket.numero }}</td>
                    <td>{{ ticket.vencimiento ? ticket.vencimiento|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ ticket.codigo }}</td>
                    <td>{{ ticket.precioTotal }}</td>
                    <td> <a class="btn btn-primary"> Cobrar </a> <td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No se encontraron tickets</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
     </div>   
    </div>
{% endblock %}
