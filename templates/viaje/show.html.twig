                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">No hay imprevistos</td>
                    </tr>
                {% endfor %}
                    
                </tbody>
            </table>

        <a href="{{ path('viaje_index') }}">volver a la lista</a>

        <a href="{{ path('viaje_edit', {'id': viaje.id}) }}">Editar</a>

        {{ include('viaje/_delete_form.html.twig') }}
