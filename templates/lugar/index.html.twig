{% extends 'base.html.twig' %}

{% block title %}Lugares{% endblock %}

{% block body %}
{{parent()}}
    <h1>Lugares</h1>
    
    {% for message in app.flashes('failed') %}

            <div class="alert alert-danger">
                {{ message }}
            </div>
            
    {% endfor %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lugar in lugars %}
            <tr>
                <td>{{ lugar.id }}</td>
                <td>{{ lugar.nombre }}</td>
                <td>
                     {{ include('lugar/_delete_form.html.twig') }}
                    <a class="btn btn-secondary"  href="{{ path('lugar_edit', {'id': lugar.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No hay lugares</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('lugar_new') }}">Crear Lugar</a>
{% endblock %}
